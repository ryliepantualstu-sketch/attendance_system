{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "build"]
}
