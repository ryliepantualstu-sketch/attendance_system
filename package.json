{
  "name": "attendance-system",
  "version": "1.0.0",
  "description": "School Attendance and Grading System",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd react-frontend && npm start\" \"wait-on http://localhost:5000 && electron .\""
  },
  "build": {
    "appId": "com.attendance.system",
    "productName": "Attendance System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "backend/**/*",
      "react-frontend/build/**/*",
      "icon.png",
      "!backend/node_modules",
      "!react-frontend/node_modules"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@types/node": "^20.19.26"
  },
  "overrides": {
    "@types/node": "^20.19.26"
  }
}
